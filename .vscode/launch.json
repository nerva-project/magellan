{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Src/Magellan/bin/Debug/netcoreapp3.1/Magellan.dll",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": [
                "--data-dir", "./data",
                "--geo-api-key-file", "${workspaceFolder}/geo-api-key",
                "--access-keys", "${workspaceFolder}/magellan-api-keys"
            ],
            "cwd": "${workspaceFolder}/Src/Magellan",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}